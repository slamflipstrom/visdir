<div id="login_form">
<%= form_tag create_login_path do %>
  <p>
  <%= label_tag :email %><br />
  <%= text_field_tag :email, params[:email] %>
  </p>

  <p>
  <%= label_tag :password %><br />
  <%= password_field_tag :password, params[:password] %>
  </p>

  <%= submit_tag "Login", :id => "submit" %>
<% end %>
</div>

<p id="n_user">Are you a new user?</p>
<%=link_to("Create a new account", signup_path) %>
